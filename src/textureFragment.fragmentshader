#version 330 core

// Ouput data

in vec2 TexCoord1;
in vec2 TexCoord2;
out vec4 outColor;
uniform sampler2D Texture1;
uniform sampler2D Texture2;

uniform float opacity;


void main()
{
	//outColor = texture(ourTexture1, TexCoord);

	outColor = mix(texture(Texture1, TexCoord1), texture(Texture2, TexCoord2), opacity);

}